<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    tools:context=".presentation.gemini.GeminiActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/txt_back"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_gemini_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_ask_gemini"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:id="@+id/sv_gemini"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_gemini_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_gemini_input"
        android:layout_marginTop="16sp"
        android:background="@drawable/button_white_bg"
        android:layout_marginHorizontal="16sp"
        android:padding="16sp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/tv_gemini_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/txt_dummy_experience_detail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <EditText
        android:id="@+id/et_gemini_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item"
        android:padding="12dp"
        android:textSize="14sp"
        android:hint="@string/txt_ask_gemini"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/sv_gemini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_ask"
        app:layout_constraintBottom_toBottomOf="parent"
        android:lines="3"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ask"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sv_gemini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_gemini_input"
        android:text="@string/txt_go"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="16dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/color_primary"
        app:cornerRadius="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/et_gemini_input"
        />

</androidx.constraintlayout.widget.ConstraintLayout>