<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    tools:context=".presentation.recommend.RecommendPathActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_recommend"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/recommend_career_title"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_bold"
        />

    <TextView
        android:id="@+id/tv_choose_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_please_choose_one"
        app:layout_constraintStart_toStartOf="@id/tv_title_recommend"
        app:layout_constraintTop_toBottomOf="@id/tv_title_recommend"
        android:textColor="@color/white"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_career"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_white_bg"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_prompt"
        tools:listitem="@layout/career_item" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_previous"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rv_career"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_choose"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/previous"
        android:layout_marginStart="24dp"
        android:layout_marginVertical="16dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/button_enabled"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        android:textSize="16sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_choose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rv_career"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="16dp"
        app:layout_constraintStart_toEndOf="@id/btn_previous"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/choose"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/color_primary"
        app:cornerRadius="16dp"
        android:textSize="16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>