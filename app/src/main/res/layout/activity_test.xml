<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.testscreen.TestActivity"
    android:background="@color/color_primary"
    >

    <TextView
        android:id="@+id/tv_test_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/txt_text_prompt"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/tv_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_test_title"
        app:layout_constraintTop_toBottomOf="@id/tv_test_title"
        android:text="@string/txt_question_1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        />

    <!-- Question 1 Card -->
    <ImageView
        android:id="@+id/iv_question1_bg"
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:background="@drawable/bg_white"
        app:layout_constraintTop_toBottomOf="@id/tv_question1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_test_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_question1_bg"
        app:layout_constraintStart_toStartOf="@id/iv_question1_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_question1_bg"
        android:layout_margin="16dp"
        android:text="@string/lorem_placeholder"
        />

    <Spinner
        android:id="@+id/tv_test_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_test_1"
        app:layout_constraintStart_toStartOf="@id/iv_question1_bg"
        android:layout_marginStart="16dp"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/tv_question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_test_title"
        app:layout_constraintTop_toBottomOf="@id/iv_question1_bg"
        android:text="@string/txt_question_2"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        />
    <!-- Question 2 Card -->
    <ImageView
        android:id="@+id/iv_question2_bg"
        android:layout_width="380dp"
        android:layout_height="160dp"
        android:background="@drawable/bg_white"
        app:layout_constraintTop_toBottomOf="@id/tv_question2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_test_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_question2_bg"
        app:layout_constraintStart_toStartOf="@id/iv_question2_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_question2_bg"
        android:layout_margin="16dp"
        android:text="@string/lorem_placeholder"
        />

    <Spinner
        android:id="@+id/tv_test_spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_test_2"
        app:layout_constraintStart_toStartOf="@id/iv_question2_bg"
        android:layout_marginStart="16dp"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/tv_question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_test_title"
        app:layout_constraintTop_toBottomOf="@id/iv_question2_bg"
        android:text="@string/txt_question_3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        />

    <ImageView
        android:id="@+id/iv_question3_bg"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_white"
        app:layout_constraintTop_toBottomOf="@id/tv_question3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_test_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_question3_bg"
        app:layout_constraintStart_toStartOf="@id/iv_question3_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_question3_bg"
        android:layout_margin="16dp"
        android:text="@string/lorem_placeholder"
        />

    <Spinner
        android:id="@+id/tv_test_spinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_test_3"
        app:layout_constraintStart_toStartOf="@id/iv_question3_bg"
        android:layout_marginStart="16dp"
        android:layout_margin="16dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_question3_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_submit"
        android:text="@string/review"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/button_enabled"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        android:textSize="16sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_question3_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_review"
        android:text="@string/submit"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/color_primary"
        app:cornerRadius="16dp"
        android:textSize="16sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>